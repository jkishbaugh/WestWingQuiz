                android:text="@string/question1c"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/question1d"
                style="@style/questionStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
